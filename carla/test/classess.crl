#include "stdio"
#include "stdheap"
#include "stdstring"

struct person_t {
  bound []char name;

  void say = (person_t self, []char msg) our {
    []char person_name = self.name;
    []char buffer = heap::alloc(128);
    string::format(buffer, "{s} said: {s} - Made on Carla",
      person_name,
      msg
    );
    io::println(buffer);
    heap::dump(buffer);
  }
} impl {};

int32 main = () {
  person_t x;
  x.name = "Rebecca my love";
  person_t::say(x, "Hello, world <3");
}